using UnityEngine;
using System.Collections;

public class PlayerController : MonoBehaviour {

	public float speed;
	public bool isJumping;
	public int jumpVelocity;
	public bool canJump;
	private Rigidbody rb;

	void Start ()
	{
		rb = GetComponent<Rigidbody>();
	}

	void FixedUpdate ()
	{
		float moveHorizontal = Input.GetAxis ("Horizontal"); //Values based on Horizontal input gets stored in moveHorizontal variable
		float moveVertical = Input.GetAxis ("Vertical"); //Values based on Vertical input gets stored in moveVertical variable
		canJump = Input.GetKey(KeyCode.Space);

		if (canJump && !isJumping) {
			jumpVelocity = 15;
			isJumping = true;
		} else {
			jumpVelocity = 0;
		}

		Vector3 movement = new Vector3 (moveHorizontal, jumpVelocity, moveVertical); //Take moveHorizontal and moveVertical and add them as forces to a Vector3 variable called movement

		rb.AddForce (movement * speed); //take the movement variable, multiply it by speed and add it as a force to the player.
	}
}
